@model IEnumerable<BikeStore.ViewModels.BikeViewModel>

@{
    ViewBag.Title = "Bike Admin Area";
}

<h2>Bike Admin Area</h2>

<p>
    @Html.ActionLink("Create New Bike", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.ModelNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WholesalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
